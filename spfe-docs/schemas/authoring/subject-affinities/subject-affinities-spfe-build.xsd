<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:simpleType name="subject-affinities-spfe-build">
        <xs:restriction base="xs:string">
            <xs:enumeration value="config-setting"/>
            <xs:enumeration value="spfe-config-attribute-name"/>
            <xs:enumeration value="spfe-build-property"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:group name="subject-affinities-spfe-build">
        <xs:choice>
            <xs:element name="config-setting">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension base="xs:string">
                            <xs:attribute name="xpath" use="optional"/>
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>
            <xs:element name="spfe-config-attribute-name">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension base="xs:string">
                            <xs:attribute name="xpath" use="optional"/>
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>
            <xs:element name="spfe-build-property" type="xs:NCName"/>
        </xs:choice>
    </xs:group>



</xs:schema>
