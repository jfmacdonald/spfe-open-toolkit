<spfe xmlns="http://spfeopentoolkit.org/spfe-ot/1.0/schemas/spfe-config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://spfeopentoolkit.org/spfe-ot/1.0/schemas/spfe-config http://spfeopentoolkit.org/spfe-ot/1.0/schemas/config/spfe-config.xsd">
    <topic-set>
        <topic-set-id>spfe-function-reference</topic-set-id>
        <topic-set-type>reference</topic-set-type>
        <topic-types>

                <topic-type>
                    <xmlns>http://spfeopentoolkit.org/spfe-docs/topic-types/spfe-function-and-template-descriptions</xmlns>
                    <href>../../topic-types/function-and-template-reference/config.xml</href>
                </topic-type>
                <topic-type>
                    <xmlns>http://spfeopentoolkit.org/spfe-docs/topic-types/function-reference</xmlns>
                    <href>../../topic-types/function-and-template-reference/config.xml</href>
                </topic-type>
                <topic-type>
                    <xmlns>http://spfeopentoolkit.org/spfe-docs/topic-types/template-reference</xmlns>
                    <href>../../topic-types/function-and-template-reference/config.xml</href>
                </topic-type>
            

        </topic-types>

        <sources>
            <authored-content>
                <include>../../content/text/xsl-function-ref/*.xml</include>
                <include>${SPFEOT_HOME}/1.0/scripts/common/function-and-template-descriptions.xml</include>
            </authored-content>
            <sources-to-extract-content-from>
                <include>${SPFEOT_HOME}/1.0/scripts/**/*.xsl</include>
                <include>${SPFEOT_HOME}/1.0/scripts/**/*.xslt</include>
            </sources-to-extract-content-from>
        </sources>
        <output-formats>
            <output-format>
                <name>html</name>
                <href>../../../spfe-ot/plugins/eppo-simple/output-types/html/config.xml</href>
            </output-format>
        </output-formats>
        
        <presentation-types>
            <presentation-type>
                <name>eppo</name>
            </presentation-type>
        </presentation-types>
        <default-topic-scope>spfe</default-topic-scope>
        <default-subject-affinity-scope>spfe</default-subject-affinity-scope>

        <build-rules>${SPFEOT_HOME}/1.0/build-tools/XML-extract-merge-rules.xml</build-rules>
        
        <strings>
            <string id="eppo-simple-topic-set-title">SPFE Functions and Templates</string>
        </strings>
    </topic-set>

</spfe>
