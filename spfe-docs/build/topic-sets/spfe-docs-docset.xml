<spfe xmlns="http://spfeopentoolkit.org/spfe-ot/1.0/schemas/spfe-config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://spfeopentoolkit.org/spfe-ot/1.0/schemas/spfe-config http://spfeopentoolkit.org/spfe-ot/1.0/schemas/config/spfe-config.xsd">
    <define name="TOPIC_SET_ID" value="spfe-docs-docset"/>
    <include href="../spfe-docs-config.xml"/>
    <topic-set-id>${TOPIC_SET_ID}</topic-set-id>
    <topic-set-type>docset</topic-set-type>
   
    <strings>
        <string id="eppo-simple-topic-set-title">SPFE Documentation</string>
    </strings>
    
    <topic-type-order>
        <topic-type>http://spfeopentoolkit.org/spfe-docs/topic-types/generic-topic</topic-type>
    </topic-type-order>
    
    <sources>
        <topics>
            <include>../../content/spfe-docs/*.xml</include>
        </topics>
        <text-objects>
            <include>../../content/*.xml</include>
        </text-objects>
        <fragments>
            <include>../../content/*.xml</include>
        </fragments>
        <graphics>
            <include>../../content/*.xml</include>
        </graphics>
        <graphics-catalog>
            <include>../../content/*.xml</include>
        </graphics-catalog>
        <strings>
            <include>../../content/*.xml</include>
        </strings>
        <synonyms>
            <include>../../content/*.xml</include>
        </synonyms>
    </sources>
    
    <default-topic-scope>spfe</default-topic-scope>
    <default-subject-affinity-scope>spfe</default-subject-affinity-scope>
    <output-formats>html</output-formats>

    <build>
        <build-directory>${SPFE_BUILD}/spfe-docs/docset</build-directory>
    </build>
    
    <scripts>
        <synthesis>
            <script>${SPFEOT_HOME}/plugins/eppo-simple/topic-types/shared/scripts/synthesis/common-topic-synthesis.xsl</script> 
            <script>${SPFEOT_HOME}/plugins/eppo-simple/topic-types/generic-topic/scripts/synthesis/generic-topic-synthesis.xsl</script>
            <script>${SPFEOT_HOME}/plugins/eppo-simple/topic-types/shared/scripts/synthesis/subject-affinities.xsl</script>
            <script>../../topic-types/shared/scripts/synthesis/subject-affinities.xsl</script>
        </synthesis>
        <link-catalog>
            <script>${SPFEOT_HOME}/1.0/scripts/link-catalog/topic/topic-link-catalog.xsl</script>
        </link-catalog>
        <image-list>
            <script>${SPFEOT_HOME}/plugins/eppo-simple/topic-types/shared/scripts/presentation/get-image-list.xsl</script>
        </image-list>
        <presentation-web>
            
            <script>${SPFEOT_HOME}/plugins/eppo-simple/topic-types/generic-topic/scripts/presentation/present-generic-topic.xsl</script>
            <script>${SPFEOT_HOME}/plugins/eppo-simple/topic-types/shared/scripts/presentation/present-doc-set-toc.xsl</script>
        </presentation-web>
    </scripts>
</spfe>
