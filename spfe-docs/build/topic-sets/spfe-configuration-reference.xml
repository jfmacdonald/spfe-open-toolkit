<spfe xmlns="http://spfeopentoolkit.org/spfe-ot/1.0/schemas/spfe-config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://spfeopentoolkit.org/spfe-ot/1.0/schemas/spfe-config http://spfeopentoolkit.org/spfe-ot/1.0/schemas/config/spfe-config.xsd">
    <include href="../spfe-docs-config.xml"/>
    <define name="TOPIC_SET_ID" value="spfe-configuration-reference"/>
    <topic-set-id>${TOPIC_SET_ID}</topic-set-id>
    <topic-set-type>reference</topic-set-type>
    <publication-info>
        <title>SPFE Configuration Settings</title>
    </publication-info>
    <topic-type-order>http://spfeopentoolkit.org/spfe-docs/schemas/topic-types/configuration-reference</topic-type-order>
    <sources>
        <topics>
            <include>../../content/config-ref/*.xml</include>
        </topics>
        <text-objects>
            <include>../../content/*.xml</include>
        </text-objects>
        <fragments>
            <include>../../content/*.xml</include>
        </fragments>
        <graphics>
            <include>../../content/*.xml</include>
        </graphics>
        <graphics-catalog>
            <include>../../content/*.xml</include>
        </graphics-catalog>
        <strings>
            <include>../../content/*.xml</include>
        </strings>
        <synonyms>
            <include>../../content/*.xml</include>
        </synonyms>
        <other name="element-descriptions">
            <include>${SPFEOT_HOME}/1.0/schemas/config/element-descriptions.xml</include>
        </other>

    </sources>

    <default-topic-scope>spfe</default-topic-scope>
    <default-mention-scope>spfe</default-mention-scope>
    <output-formats>html</output-formats>


    <build>
        <build-rules>${SPFEOT_HOME}/plugins/config-schema-docs/build-tools/config-ref-rules.xml</build-rules>               
        <build-directory>${HOME}/spfebuild/spfe-docs/config-ref</build-directory>
    </build>

    <deployment>
        <output-path>${TOPIC_SET_ID}</output-path>
    </deployment>
    
    <scripts>
        <synthesis>
            <script>${SPFEOT_HOME}/plugins/config-schema-docs/scripts/synthesis/synthesize-schema-docs.xsl</script>
            <script>${SPFEOT_HOME}/plugins/eppo-simple/scripts/synthesis/mentions/mentions.xsl</script>
        </synthesis>        
        <link-catalog>
            <script>${SPFEOT_HOME}/plugins/eppo-simple/scripts/link-catalog/doctype-ref/doctype-link-catalog.xsl</script>
        </link-catalog>
        <toc>
 <script>${SPFEOT_HOME}/plugins/config-schema-docs/scripts/toc/schema-toc.xsl</script>
        </toc>
        <image-list>
            <script>${SPFEOT_HOME}/plugins/eppo-simple/scripts/presentation/image-handling/get-image-list.xsl</script>
        </image-list>
        <presentation-web>
            <script>${SPFEOT_HOME}/plugins/config-schema-docs/scripts/presentation/present-doctype.xsl</script>
        </presentation-web>
        <other name="schema-defs">
            <script>${SPFEOT_HOME}/plugins/config-schema-docs/scripts/synthesis/schema-defs.xsl</script>
        </other>
    </scripts>
    
    <other name="schema-file">${SPFEOT_HOME}/1.0/schemas/config/spfe-config.xsd</other>
</spfe>
