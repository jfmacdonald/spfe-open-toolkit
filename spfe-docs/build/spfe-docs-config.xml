                <href>topic-sets/spfe-configuration-reference.xml</href>
            </topic-set>
-->
        </topic-sets>
     </doc-set>
    
     <strings>
        <string id="eppo-simple-topic-set-product">SPFE Open Toolkit</string>
        <string id="eppo-simple-topic-set-release">1.0 (alpha 1)</string>
        <string id="eppo-simple-topic-set-copyright">Copyright Â© 2013 Analecta Communications Inc.</string>
    </strings>
    
    <topic-type-aliases>
        <topic-type>
            <id>http://spfeopentoolkit.org/spfe-docs/schemas/authoring/generic-topic</id>
            <alias>Concept</alias>
            <plural>Concepts</plural>
        </topic-type>
        <topic-type>
            <id>http://spfeopentoolkit.org/spfe-docs/schemas/authoring/generic-task-topic</id>
            <alias>Tasks</alias>
            <plural>Tasks</plural>
        </topic-type>
