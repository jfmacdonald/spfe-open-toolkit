    <define name="SPFE_DOCS_BUILD" value="${HOME}/spfebuild/spfe-docs"/>
    <doc-set id="spfe-docs">
        <title>SPFE Documentation</title>
        <topic-set-type-order>docset, guide, task, reference</topic-set-type-order>
        <topic-sets>
            <topic-set>
                <id>spfe-docs-docset</id>
                <href>topic-sets/spfe-docs-docset.xml</href>
            </topic-set>
            <topic-set>
                <id>spfe-development</id>
                <href>topic-sets/spfe-development.xml</href>
            </topic-set>

            <topic-set>
                <id>spfe-development-tasks</id>
                <href>topic-sets/spfe-development-tasks.xml</href>
            </topic-set>
