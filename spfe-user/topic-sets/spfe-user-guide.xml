    <topic-set  xmlns="http://spfeopentoolkit.org/ns/spfe-ot/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://spfeopentoolkit.org/ns/spfe-ot/config http://spfeopentoolkit.org/spfe-ot/1.0/schemas/config/spfe-config.xsd">
        <topic-set-id>spfe-user-guide</topic-set-id>
        <title>SPFE User Guide</title>
        <topic-set-type>guide</topic-set-type>

        <topic-types>
            <topic-type>
                <name>{http://spfeopentoolkit.org/ns/spfe-docs}generic-topic</name>
                <href>../../spfe-docs/topic-types/generic-topic/config.xml</href>
            </topic-type>    
            <topic-type>
                <name>{http://spfeopentoolkit.org/ns/spfe-docs}think-plan-do-topic</name>
                <href>../../spfe-docs/topic-types/think-plan-do-topic/config.xml</href>
            </topic-type>    
            <topic-type>
                <name>{http://spfeopentoolkit.org/ns/spfe-docs}feature-topic</name>
                <href>../../spfe-docs/topic-types/feature-topic/config.xml</href>
            </topic-type>    
            <topic-type>
                <name>{http://spfeopentoolkit.org/ns/spfe-docs}essay</name>
                <href>../../spfe-docs/topic-types/essay/config.xml</href>
            </topic-type>    
        </topic-types>
         
        <presentation-types>
            <presentation-type>eppo</presentation-type>
        </presentation-types>       
        <output-formats>
            <output-format>
                <name>xhtml</name>
            </output-format>
        </output-formats>

        <sources>
            <authored-content>
                <include>../content/text/spfe-user-guide/*/*.xml</include>
                <include>../content/text/reference/*.xml</include>
            </authored-content>
        </sources>

        <default-topic-scope>spfe</default-topic-scope>
        <default-subject-scope>spfe</default-subject-scope>
        <strings>
            <string id="eppo-simple-topic-set-title">Using the SPFE Open Toolkit</string>
        </strings>
    </topic-set>

